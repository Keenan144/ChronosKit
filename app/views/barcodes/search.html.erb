<form class="form-horizontal main-form formgeneratetests" action="/search" method="post">
  <h3 align="center">Search SOSS</h3>
  <h3 align="center"><small>Enter SOSS number</small></h3>
  <div class="input-group form-group form-group-lg">
    <span class="input-group-addon">SOSS</span>
    <input type="text" class="form-control" placeholder="00123" name="number">
  </div>
  <input type="submit" value="submit" class="submit" align="center">
</form>

<h4 align="center">
<% if @error != nil %>
  <%= p @error %>
<% end %>
</h4>

